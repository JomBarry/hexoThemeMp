<%# nav%>
<link rel="stylesheet" type="text/css" href="<%= theme.partial.css.index_header %>">

<div class="navbar-fixed index_header">
    <% var navColor = "linear-gradient(45deg, #51636d, #441034)";
    if(theme.nav.color){
        navColor = theme.nav.color;
    } %>
    <nav style="background:<%= navColor %>;">
        <div class="row">
            <div class="col s1 m1 l1"></div>
            <div class="col s10 m10 l10">
                <div class="nav-wrapper">
                    <a href="<%= url_for(config.url) %>" class="brand-logo">
                    <% if(theme.navLogo.image.enable){ %>
                        <img src="<%= theme.navLogo.image.url %>" alt="Logo">
                    <% }else if(theme.navLogo.text.enable) { %>
                        <%= theme.navLogo.text.text %>
                    <% } %> </a>
                    <ul class="right hide-on-med-and-down">
                        <% Object.keys(theme.menu).forEach( item =>{ %>
                        <li>
                            <a href="<%= url_for(theme.menu[item].url) %>" style="color:#fff;">
                                <% if(theme.menu[item].icon != null){ %>
                                <i class="fa fa-<%= theme.menu[item].icon %>"></i> 
                                <% } %>
                                <%= __(item) %>
                            </a>
                        </li>
                        <% });%>
                    </ul>
                    <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
                </div>
            </div>
            <div class="col s1 m1 l1"></div>
        </div>
    </nav>
</div>
<%- partial('_partial/index_header_phone') %>