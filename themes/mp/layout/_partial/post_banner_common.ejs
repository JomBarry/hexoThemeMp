<div class="slider">
    <ul class="slides">
    <% if(page.banner && page.banner.length){
        page.banner.map(pageBannerItem => { %>
        <li style="background-image:url(<%= pageBannerItem %>);background-repeat:no-repeat; background-attachment: fixed;background-size: cover;background-position: center;"></li>
        <% }); %>
    <% }else{ 
        theme.posts.defaultBanner.map(postsDefaultBanner => { %>
        <li style="background-image:url(<%= postsDefaultBanner %>);background-repeat:no-repeat; background-attachment: fixed;background-size: cover;background-position: center;"></li>
    <% }); } %>
    </ul>
    <h1 id="postTitle" class="center-align" style="position: absolute;top:0;left:0;width:100%;height:100%;margin:0;line-height: 200px;color:#fff;font-weight: bold;background:rgba(0,0,0,0.5);z-index:2;"><%= page.title %></h1>
</div>