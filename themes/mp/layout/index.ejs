                                        Object.keys(theme.categoriesColor).forEach(categoriesColorItem => {
                                            if(categoriesColorItem == siteCategoriesItem.name){
                                                categoriesColor = theme.categoriesColor[categoriesColorItem];
                                            }
                                        });
                                    }
