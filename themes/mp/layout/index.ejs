
<% 
// 设置随机值
// 默认图片处使用
function randomPic(postName){
    var count = postName.length << 3,defaultThumbnailLength = theme.posts.defaultThumbnail.length;
    while (count >= defaultThumbnailLength) {
        count %= defaultThumbnailLength;
    }
    return count;
} %>
